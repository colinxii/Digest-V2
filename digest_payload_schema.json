{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Digest Payload Schema",
  "description": "Schema for validating digest_payload.json structure",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "matured_mortgages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "amount": {
            "type": "number"
          },
          "mortgagees": {
            "type": "string"
          },
          "last_update": {
            "type": "string",
            "format": "date-time"
          },
          "crm_link": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["date", "amount", "mortgagees", "last_update", "crm_link"]
      }
    },
    "renewing_mortgages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "amount": {
            "type": "number"
          },
          "mortgagees": {
            "type": "string"
          },
          "last_update": {
            "type": "string",
            "format": "date-time"
          },
          "crm_link": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["date", "amount", "mortgagees", "last_update", "crm_link"]
      }
    },
    "appointments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "clients": {
            "type": "string"
          },
          "crm_link": {
            "type": "string",
            "format": "uri"
          },
          "coconut_link": {
            "type": "string",
            "format": "uri"
          },
          "service": {
            "type": "string"
          },
          "last_update": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["date", "clients", "crm_link", "coconut_link", "service", "last_update"]
      }
    }
  },
  "required": ["name", "title", "matured_mortgages", "renewing_mortgages", "appointments"]
}
